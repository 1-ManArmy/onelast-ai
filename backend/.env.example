# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/onelast-ai

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AI Service (placeholder for Azure OpenAI or other AI service)
AI_API_KEY=your-ai-api-key
AI_API_URL=https://api.openai.com/v1

# Additional AI Services
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-studio-key-here
AZURE_OPENAI_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=your-azure-endpoint-here

# Mistral AI
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_API_URL=https://api.mistral.ai/v1

# Google AI Studio
GOOGLE_AI_STUDIO_KEY=your-google-ai-studio-key-here
GOOGLE_AI_STUDIO_URL=https://generativelanguage.googleapis.com/v1beta

# AutoChat Configuration
AUTOCHAT_MAX_TRAINING_SAMPLES=100
AUTOCHAT_DEFAULT_RESPONSE_DELAY=2
AUTOCHAT_MAX_REPLY_LENGTH=500

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760

# Email service (for future notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
