# Development Environment Configuration
NODE_ENV=development
PORT=3001

# Stripe Test Keys (Get these from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Card Authorization Settings
CARD_VERIFICATION_AMOUNT=100
CARD_VERIFICATION_CURRENCY=usd
AUTO_REFUND_ENABLED=true
AUTHORIZATION_TIMEOUT=300000
AUTHORIZATION_DESCRIPTION=Card Verification - OneLast AI

# BIN Lookup Services (Optional - Free tiers available)
BINLIST_API_KEY=
BINBASE_API_KEY=
BINCODES_API_KEY=

# Fraud Detection Services (Optional)
SIFT_API_KEY=
SIFT_ACCOUNT_ID=
KOUNT_API_KEY=
KOUNT_MERCHANT_ID=
MAXMIND_LICENSE_KEY=
MAXMIND_ACCOUNT_ID=
SIGNIFYD_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_KEYS=10000

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
API_SECRET=your_api_secret_for_authentication

# Testing Configuration
TEST_MODE=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=http://localhost:3001/webhooks/validation

# Database (Optional - for storing validation results)
MONGODB_URI=
ENABLE_DATABASE=false
