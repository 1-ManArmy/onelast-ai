# Payment Validation System Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys for BIN Lookup Services
BINLIST_API_KEY=your_binlist_api_key_here
BINBASE_API_KEY=your_binbase_api_key_here
BINCODES_API_KEY=your_bincodes_api_key_here

# Fraud Detection Services
SIFT_API_KEY=your_sift_api_key_here
KOUNT_API_KEY=your_kount_api_key_here
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here

# Card Validation Services
VERICHECK_API_KEY=your_vericheck_api_key_here
CARDLYTICS_API_KEY=your_cardlytics_api_key_here

# Stripe Configuration (for Card Authorization System)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Card Authorization Settings
CARD_VERIFICATION_AMOUNT=100
CARD_VERIFICATION_CURRENCY=usd
AUTO_REFUND_ENABLED=true
AUTHORIZATION_TIMEOUT=300000
AUTHORIZATION_DESCRIPTION=Card Verification - OneLast AI

# Additional BIN Lookup Services
BINBASE_API_KEY=your_binbase_api_key_here
BINCODES_API_KEY=your_bincodes_api_key_here

# Additional Fraud Detection Services
SIFT_ACCOUNT_ID=your_sift_account_id_here
KOUNT_MERCHANT_ID=your_kount_merchant_id_here
SIGNIFYD_API_KEY=your_signifyd_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_KEYS=10000

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
API_SECRET=your_api_secret_for_authentication

# Testing Configuration
TEST_MODE=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhooks/validation

# Database (Optional - for storing validation results)
MONGODB_URI=mongodb://localhost:27017/payment_validation
ENABLE_DATABASE=false
